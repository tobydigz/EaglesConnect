<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LinearLayoutStyle" parent="AppTheme">
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="archiveText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="profileText" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#83000000</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>
